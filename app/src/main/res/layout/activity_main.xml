<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/enableButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable" />

        <Button
            android:id="@+id/disableButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disable" />

    </LinearLayout>

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voice selection:" />

            <Button
                android:id="@+id/magic_chords_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Magic Chords"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/baby_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baby"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/cave_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cave"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/titan_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titan"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/lost_soul_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lost Soul"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/robot_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Robot"
                android:textAllCaps="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Getters and setters:" />

            <Button
                android:id="@+id/set_vcmd_background_sounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set vcmd_background_sounds"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/set_vcmd_mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set vcmd_mute"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/get_vcmd_voice_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get vcmd_voice"
                android:textAllCaps="false"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/remote_video_view_container"
                android:layout_width="130dp"
                android:layout_height="172.9dp"
                android:layout_gravity="center"
                android:background="@color/main_color_gray" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/view_container"
                android:layout_width="130dp"
                android:layout_height="172.9dp"
                android:layout_gravity="center"
                android:background="@color/main_color_gray" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>